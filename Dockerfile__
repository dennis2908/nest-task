# Build stage
FROM node:18-alpine AS builder

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# Production stage
FROM node:18-alpine

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm ci --only=production

COPY --from=builder /usr/src/app/dist ./dist

# Copy wait script
COPY wait-for-db.js /usr/src/app/wait-for-db.js

EXPOSE 3000

# Wait for DB then start app
CMD ["sh", "-c", "node wait-for-db.js && node dist/main"]